<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUs">

    <include layout="@layout/support_toolbar" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/im_human_logo"
        app:layout_constraintBottom_toTopOf="@+id/guideline25"
        app:layout_constraintEnd_toEndOf="@+id/guideline24"
        app:layout_constraintStart_toEndOf="@+id/guideline23"
        app:layout_constraintTop_toBottomOf="@+id/guideline48"

        />

    <androidx.cardview.widget.CardView
        android:id="@+id/txtProgrammer"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintEnd_toStartOf="@id/guideline24"
        app:layout_constraintStart_toEndOf="@id/guideline23"
        app:layout_constraintTop_toBottomOf="@id/guideline25">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="8dp"
            android:shadowColor="@color/quantum_grey"
            android:text="@string/programmer"
            android:textAlignment="center"
            android:textColor="@color/quantum_white_100"
            android:textSize="20sp"

            app:layout_constraintEnd_toStartOf="@id/guideline24"
            app:layout_constraintStart_toEndOf="@id/guideline23"
            app:layout_constraintTop_toBottomOf="@id/guideline25" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/txtSupervisor"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintEnd_toStartOf="@id/guideline24"
        app:layout_constraintStart_toEndOf="@id/guideline23"
        app:layout_constraintTop_toBottomOf="@id/txtProgrammer">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="8dp"
            android:text="@string/supervisor"
            android:textAlignment="center"
            android:textColor="@color/quantum_white_100"
            android:textSize="20sp"

            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/txtFounder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintEnd_toStartOf="@id/guideline24"
        app:layout_constraintStart_toEndOf="@id/guideline23"
        app:layout_constraintTop_toBottomOf="@id/txtSupervisor">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="8dp"
            android:shadowColor="@color/quantum_grey"
            android:text="@string/founder"
            android:textAlignment="center"
            android:textColor="@color/quantum_white_100"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@id/guideline24"
            app:layout_constraintStart_toEndOf="@id/guideline23"
            app:layout_constraintTop_toBottomOf="@id/guideline25" />


    </androidx.cardview.widget.CardView>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.11" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.51" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline48"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

</androidx.constraintlayout.widget.ConstraintLayout>